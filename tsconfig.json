{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src"
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      ".git",
      "node_modules"
  ]
}
